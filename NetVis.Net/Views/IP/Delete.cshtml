@model NetVis.Net.Models.Ip

@{
    ViewBag.Title = "Delete";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span2">
            <div class="well sidebar-nav">
                <ul class="nav nav-list">
                    <li class="nav-header">IP Actions:</li>
                    <li class="active">@Html.ActionLink("Create New", "Create")</li>
                </ul>
            </div>
        </div>
        <div class="span10">
            <div class="leaderboard">
                <h1>
                    IP Details</h1>
                <table class="table table-striped table-condensed">
                    <tr>
                        <th>
                            Subnet
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Subnet.Network)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Address
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Address)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Name
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Name)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Purpose
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Purpose)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Url
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Url)
                        </td>
                    </tr>
                </table>
                <p>
            @using (Html.BeginForm())
                    {
                        <p>
                            <input class="btn btn-danger" type="submit" value="Delete" />
                            <a class="btn" href="/IP">Cancel</a>
                        </p>
                    }
                </p>
            </div>
        </div>
    </div>
</div>
