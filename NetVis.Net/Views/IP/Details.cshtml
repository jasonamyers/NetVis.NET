@model NetVis.Net.Models.Ip
@{
    ViewBag.Title = "Details";
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span2">
            <div class="well sidebar-nav">
                <ul class="nav nav-list">
                    <li class="nav-header">IP Actions:</li>
                    <li class="active">@Html.ActionLink("Create New", "Create")</li>
                </ul>
            </div>
        </div>
        <div class="span10">
            <div class="leaderboard">
                <h1>
                    IP Details</h1>
                <table class="table table-striped table-condensed">
                    <tr>
                        <th>
                            Subnet
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Subnet.Network)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Address
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Address)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Name
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Name)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Purpose
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Purpose)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Url
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Url)
                        </td>
                    </tr>
                </table>
                <p>
                    <a class="btn btn-warning" href="/IP/Edit/@Model.IpId"><i class="icon-pencil icon-white">
                    </i>Edit</a> <a class="btn" href="/IP">Cancel</a>
                </p>
            </div>
        </div>
    </div>
</div>
