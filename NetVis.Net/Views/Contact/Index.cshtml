@model IEnumerable<NetVis.Net.Models.Contact>
@{
    ViewBag.Title = "Contacts";
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span2">
            <div class="well sidebar-nav">
                <ul class="nav nav-list">
                    <li class="nav-header">Content Actions:</li>
                    <li class="active">@Html.ActionLink("Create New", "Create")</li>
                </ul>
            </div>
        </div>
        <div class="span10">
            <div class="leaderboard">
                <table class="table table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>
                                Site
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Phone
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tdbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Site.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <a class="btn btn-primary" href="/Contact/Details/@item.ContactId"><i class="icon-search icon-white"></i>Details</a>
                                <a class="btn btn-warning" href="/Contact/Edit/@item.ContactId"><i class="icon-pencil icon-white"></i>Edit</a>
                                <a class="btn btn-danger" href="/Contact/Delete/@item.ContactId"><i class="icon-trash icon-white"></i>Delete</a>
                            </td>
                        </tr>
                    }
                    </tdbody>
                </table>
            </div>
        </div>
    </div>
</div>
