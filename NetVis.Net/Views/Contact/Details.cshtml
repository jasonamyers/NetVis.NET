@model NetVis.Net.Models.Contact
@{
    ViewBag.Title = "Details";
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span2">
            <div class="well sidebar-nav">
                <ul class="nav nav-list">
                    <li class="nav-header">Contact Actions:</li>
                    <li class="active">@Html.ActionLink("Create New", "Create")</li>
                </ul>
            </div>
        </div>
        <div class="span10">
            <div class="leaderboard">
                <h1>
                    Contact Details</h1>
                <table class="table table-striped table-condensed">
                    <tr>
                        <th>
                            Site
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Site.Name)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Name
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Name)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Phone
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Phone)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Email
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Email)
                        </td>
                    </tr>
                </table>
                <p>
                    <a class="btn btn-warning" href="/Contact/Edit/@Model.ContactId"><i class="icon-pencil icon-white">
                    </i>Edit</a> <a class="btn" href="/Contact">Cancel</a>
                </p>
            </div>
        </div>
</div>
</div> 