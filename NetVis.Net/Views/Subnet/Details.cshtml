@model NetVis.Net.Models.Subnet
@{
    ViewBag.Title = "Subnet: " + Model.Network;
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span2">
            <div class="well sidebar-nav">
                <ul class="nav nav-list">
                    <li class="nav-header">Subnet Actions:</li>
                    <li class="active">@Html.ActionLink("Add New IP", "Create", "IP")</li>
                    <li>@Html.ActionLink("Create New", "Create")</li>
                </ul>
            </div>
        </div>
        <div class="span10">
            <div class="leaderboard">
                <h1>Subnet Details</h1>
                <div class="row-fluid">
                    <div class="span2">
                        <b>Site: </b>@Html.DisplayFor(model => model.Site.Name)<br />
                        <b>Network: </b>@Html.DisplayFor(model => model.Network)<br />
                        <b>Netmask: </b>@Html.DisplayFor(model => model.Netmask)<br />
                        <b>Gateway: </b>@Html.DisplayFor(model => model.Gateway)<br />
                        <b>Description: </b>@Html.DisplayFor(model => model.Description)<br />
                        <a class="btn btn-warning" href="/Subnet/Edit/@Model.SubnetId"><i class="icon-pencil icon-white">
                        </i>Edit</a>
                    </div>
                    <div class="span8">
                        <table class="table table-striped table-condensed">
                            <thead>
                                <tr>
                                    <th>
                                        Address
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (NetVis.Net.Models.Ip ip in Model.Ips.OrderBy(i => i.Address, new NetVis.Net.Models.IpComparer()))
                                {
                                    <tr>
                                        <td>@ip.Address
                                        </td>
                                        <td>@ip.Name
                                        </td>
                                        <td>
                                <a class="btn btn-primary" href="/Ip/Details/@ip.IpId"><i class="icon-search icon-white"></i>Details</a>
                                <a class="btn btn-warning" href="/Ip/Edit/@ip.IpId"><i class="icon-pencil icon-white"></i>Edit</a>
                                <a class="btn btn-danger" href="/Ip/Delete/@ip.IpId"><i class="icon-trash icon-white"></i>Delete</a>
                            </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
