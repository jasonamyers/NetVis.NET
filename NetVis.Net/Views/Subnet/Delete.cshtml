@model NetVis.Net.Models.Subnet
@{
    ViewBag.Title = "Delete";
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span2">
            <div class="well sidebar-nav">
                <ul class="nav nav-list">
                    <li class="nav-header">Subnet Actions:</li>
                    <li class="active">@Html.ActionLink("Create New", "Create")</li>
                </ul>
            </div>
        </div>
        <div class="span10">
            <div class="leaderboard">
                <h1>
                    Delete</h1>
                <h2>
                    Are you sure you want to delete this?</h2>
                <table class="table table-striped table-condensed">
                    <tr>
                        <th>
                            Network:
                        </th>
                        <td>@Html.DisplayFor(model => model.Network)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Netmask:
                        </th>
                        <td>@Html.DisplayFor(model => model.Netmask)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Gateway:
                        </th>
                        <td>@Html.DisplayFor(model => model.Gateway)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Description:
                        </th>
                        <td>@Html.DisplayFor(model => model.Description)
                        </td>
                    </tr>
                </table>
                <p>
                    @using (Html.BeginForm())
                    {
                        <p>
                            <input class="btn btn-danger" type="submit" value="Delete" />
                            <a class="btn" href="/Subnet">Cancel</a>
                        </p>
                    }
                </p>
            </div>
        </div>
    </div>
</div>
