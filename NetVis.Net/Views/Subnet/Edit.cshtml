@model NetVis.Net.Models.Subnet
@{
    ViewBag.Title = "Edit: " + Model.Network;
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span2">
            <div class="well sidebar-nav">
                <ul class="nav nav-list">
                    <li class="nav-header">Subnet Actions:</li>
                    <li class="active">@Html.ActionLink("Create New", "Create")</li>
                </ul>
            </div>
        </div>
        <div class="span10">
            <div class="leaderboard">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.SubnetId)
                <legend>Edit Subnet</legend>
                <table>
                    <tr>
                        <th>
                            @Html.LabelFor(model => model.SiteId, "Site")
                        </th>
                        <td>
                            @Html.DropDownList("SiteId", String.Empty)
                        </td>
                        @Html.ValidationMessageFor(model => model.SiteId)
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(model => model.Description)
                        </th>
                        <td>@Html.EditorFor(model => model.Description)
                        </td>
                        @Html.ValidationMessageFor(model => model.Description)
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(model => model.Network)
                        </th>
                        <td>@Html.EditorFor(model => model.Network)
                        </td>
                        @Html.ValidationMessageFor(model => model.Network)
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(model => model.Netmask)
                        </th>
                        <td>@Html.EditorFor(model => model.Netmask)
                        </td>
                        @Html.ValidationMessageFor(model => model.Netmask)
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(model => model.Gateway)
                        </th>
                        <td>@Html.EditorFor(model => model.Gateway)
                        </td>
                        @Html.ValidationMessageFor(model => model.Gateway)
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(model => model.Preference)
                        </th>
                        <td>@Html.EditorFor(model => model.Preference)
                        </td>
                        @Html.ValidationMessageFor(model => model.Preference)
                    </tr>
                </table>
                <p>
                    <input class="btn btn-primary" type="submit" value="Save" />
                            <a class="btn" href="/Subnet">Cancel</a>
                </p>
 
            }
        </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
