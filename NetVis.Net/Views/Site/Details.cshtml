@model NetVis.Net.Models.Site
@{
    ViewBag.Title = "Details";
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span2">
            <div class="well sidebar-nav">
                <ul class="nav nav-list">
                    <li class="nav-header">Site Actions:</li>
                    <li class="active">@Html.ActionLink("Create New", "Create")</li>
                </ul>
            </div>
        </div>
        <div class="span10">
            <div class="leaderboard">
                <h1>
                    Site Details</h1>
                <table class="table table-striped table-condensed">
                    <tr>
                        <th>
                            Name
                        </th>
                        <td class="display-field">
                            @Html.DisplayFor(model => model.Name)
                        </td>
                    </tr>
                    <tr>
                        <th class="display-label">
                            Address
                        </th>
                        <td class="display-field">
                            @Html.DisplayFor(model => model.Address)
                        </td>
                    </tr>
                    <tr>
                        <th class="display-label">
                            Description
                        </th>
                        <td class="display-field">
                            @Html.DisplayFor(model => model.Description)
                        </td>
                    </tr>
                    <tr>
                        <th class="display-label">
                            Priority
                        </th>
                        <td class="display-field">
                            @Html.DisplayFor(model => model.Priority)
                        </td>
                    </tr>
                    <tr>
                        <th class="contacts">
                            Contacts
                        </th>
                        <td>
                            <table>
                                @foreach (var item in Model.Contacts)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Phone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                    </tr>
        
                                }
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <th id="subnets">
                            Subnets
                        </th>
                        <td>
                            <table>
                                @foreach (var item in Model.Subnets)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Network)
                                        </td>
                                    </tr>
        
                                }
                            </table>
                        </td>
                    </tr>
                </table>
                <p>
                    <a class="btn btn-warning" href="/Site/Edit/@Model.SiteId"><i class="icon-pencil icon-white">
                    </i>Edit</a> <a class="btn" href="/Site">Cancel</a>
                </p>
            </div>
        </div>
    </div>
</div>
