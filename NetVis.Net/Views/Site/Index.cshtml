@model IEnumerable<NetVis.Net.Models.Site>
@{
    ViewBag.Title = "Index";
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span2">
            <div class="well sidebar-nav">
                <ul class="nav nav-list">
                    <li class="nav-header">Site Actions:</li>
                    <li class="active">@Html.ActionLink("Create New", "Create")</li>
                </ul>
            </div>
        </div>
        <div class="span10">
            <div class="leaderboard">
                <table class="table table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Priority
                            </th>
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Priority)
                                </td>
                                <td>
                                    <a class="btn btn-primary" href="/Site/Details/@item.SiteId"><i class="icon-search icon-white">
                                    </i>Details</a> <a class="btn btn-warning" href="/Site/Edit/@item.SiteId"><i class="icon-pencil icon-white">
                                    </i>Edit</a> <a class="btn btn-danger" href="/Site/Delete/@item.SiteId"><i class="icon-trash icon-white">
                                    </i>Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
